@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor

<h1>Add New Doctors</h1>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.LabelFor(model => model.Specialty)
    @Html.TextBoxFor(model => model.Specialty)

    <input type="submit" value="Add new doctor" class="btn btn-outline-dark" />
}
<hr>
<input type="button" value="Doctors List" onclick="location.href='@Url.Action("Index", "Docotrs")';" class="btn btn-primary" />
<input type="button" value="Return Home" onclick="location.href='@Url.Action("Index", "Home")';" class="btn btn-primary" />