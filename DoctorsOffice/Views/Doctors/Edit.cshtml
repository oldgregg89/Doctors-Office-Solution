@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor

<h1>Edit this Doctor</h1>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.DoctorId)
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)<br>

    @Html.LabelFor(model => model.Specialty)
    @Html.EditorFor(model => model.Specialty)

    <input type="submit" value="Update Doctor" class="btn btn-outline-dark" />
}
<hr>
<input type="button" value="Doctors List" location.href='@Url.Action("Index", "Doctors")';" class="btn btn-primary" />
<input type="button" value="Return Home" onclick="location.href='@Url.Action("Index", "Home")';" class="btn btn-primary" />