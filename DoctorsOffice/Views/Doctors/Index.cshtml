@{
  Layout = "_Layout";
}

@using DoctorOffice.Models;
@model List<DoctorOffice.Models.Doctors>;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No doctors have been added yet!</h3>
} 

@foreach (Doctor doctor in Model)
{
  <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId }) || @course.Number</li>
}
<input type="button" value="Add new doctor" onclick="location.href='@Url.Action("Create", "Doctors")';" class="btn btn-primary" />
<input type="button" value="Return Home" onclick="location.href='@Url.Action("Index", "Home")';" class="btn btn-primary" />